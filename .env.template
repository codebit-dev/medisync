# Flask Configuration
SECRET_KEY=your-secret-key-here-change-in-production
FLASK_ENV=development

# Database
DATABASE_URL=sqlite:///medisync.db

# FHIR Configuration
FHIR_BASE_URL=http://localhost:5000/fhir

# WHO ICD-11 API Credentials
# Get credentials from: https://icd.who.int/icdapi
ICD11_CLIENT_ID=your-icd11-client-id

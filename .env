# Flask Configuration
SECRET_KEY=dev-secret-key-for-local-testing-2024
FLASK_ENV=development

# Use SQLite for development (set to false when MySQL is available)
USE_SQLITE=true

# MySQL Database Configuration
MYSQL_USER=root
MYSQL_PASSWORD=
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DATABASE=medisync

# Alternative: You can override with a complete DATABASE_URL
# DATABASE_URL=mysql+pymysql://root:password@localhost:3306/medisync?charset=utf8mb4

# FHIR Configuration
FHIR_BASE_URL=http://localhost:5000/fhir

# WHO ICD-11 API Credentials
# Get credentials from: https://icd.who.int/icdapi
ICD11_CLIENT_ID=your-icd11-client-id
ICD11_CLIENT_SECRET=your-icd11-client-secret

# ABHA/ABDM Authentication
# For sandbox: https://healthidsbx.abdm.gov.in
# For production: https://healthid.abdm.gov.in
ABHA_AUTH_URL=https://healthidsbx.abdm.gov.in/api/v1/auth
ABHA_CLIENT_ID=your-abha-client-id
ABHA_CLIENT_SECRET=your-abha-client-secret

# Elasticsearch (Optional - for scalable search)
# Leave empty if not using Elasticsearch
ELASTICSEARCH_URL=

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:5000

# MEDISYNC Production Environment Configuration
# Copy this file to .env and update with your production values

# Application Settings
NODE_ENV=production
FLASK_ENV=production
SECRET_KEY=generate-a-strong-secret-key-use-python-secrets-module
DEBUG=false

# Database Configuration
USE_SQLITE=false
MYSQL_HOST=database
MYSQL_PORT=3306
MYSQL_DATABASE=medisync
MYSQL_USER=medisync_user
MYSQL_PASSWORD=change-this-strong-password-in-production
MYSQL_ROOT_PASSWORD=change-this-root-password-in-production

# Redis Configuration
REDIS_URL=redis://redis:6379/0
REDIS_PASSWORD=optional-redis-password

# API URLs
REACT_APP_API_URL=https://api.medisync.in
FRONTEND_URL=https://medisync.in

# WHO ICD-11 API Credentials
# Register at: https://icd.who.int/icdapi
ICD11_CLIENT_ID=your-icd11-client-id
ICD11_CLIENT_SECRET=your-icd11-client-secret

# ABHA/ABDM Authentication
# For production: https://healthid.abdm.gov.in
# For sandbox: https://healthidsbx.abdm.gov.in
ABHA_AUTH_URL=https://healthid.abdm.gov.in/api/v1/auth
ABHA_CLIENT_ID=your-abha-client-id
ABHA_CLIENT_SECRET=your-abha-client-secret
ABHA_REDIRECT_URI=https://medisync.in/auth/callback

# JWT Configuration
JWT_SECRET_KEY=generate-another-strong-secret-for-jwt
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=2592000
JWT_ALGORITHM=HS256

# Email Configuration (for password reset, notifications)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-specific-password

# File Upload
MAX_CONTENT_LENGTH=16777216
UPLOAD_FOLDER=/app/uploads
ALLOWED_EXTENSIONS=csv,json,xml

# Security
CORS_ORIGINS=https://medisync.in,https://www.medisync.in
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Strict
WTF_CSRF_ENABLED=true
WTF_CSRF_TIME_LIMIT=3600

# Rate Limiting
RATELIMIT_ENABLED=true
RATELIMIT_STORAGE_URL=redis://redis:6379/1
RATELIMIT_DEFAULT=100/hour
RATELIMIT_HEADERS_ENABLED=true

# Monitoring
SENTRY_DSN=your-sentry-dsn-for-error-tracking
PROMETHEUS_ENABLED=true
LOG_LEVEL=INFO
LOG_FILE=/app/logs/medisync.log

# SSL/TLS
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem
FORCE_HTTPS=true

# Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=medisync-backups

# AWS Configuration (if using AWS)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=ap-south-1

# Grafana Monitoring
GRAFANA_PASSWORD=change-this-admin-password
